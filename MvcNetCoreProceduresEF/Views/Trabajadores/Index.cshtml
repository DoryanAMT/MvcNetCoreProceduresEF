@model TrabajadoresModel

@{
    List<string> oficios = ViewData["OFICIOS"] as List<string>;
}

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form method="post">
    <select name="oficio" class="form form-control">
        @foreach (string oficio in oficios)
        {
            <option value="@oficio">@oficio</option>
        }
    </select>
    <button class="btn btn-info">Buscar trabajadores</button>
</form>
<ul class="list-group">
    <li class="list-group-item">
        Personas: @Model.Personas
    </li>
    <li class="list-group-item">
        Media Salarial: @Model.MediaSalarial
    </li>
    <li class="list-group-item">
        Suma salarial: @Model.SumaSalarial
    </li>
</ul>

<table class="table">
    <thead>
        <tr>
            <th>
                ID TRABAJADOR
            </th>
            <th>
                APELLIDO
            </th>
            <th>
                OFICIO
            </th>
            <th>
                SALARIO
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Trabajador trabajador in Model.Trabajadores)
        {
            <tr>
                <td>
                    @trabajador.IdTrabajador
                </td>
                <td>
                    @trabajador.Apellido
                </td>
                <td>
                    @trabajador.Oficio
                </td>
                <td>
                    @trabajador.Salario
                </td>
            </tr>
        }
    </tbody>
</table>
